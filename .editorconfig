
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
end_of_line = lf
max_line_length = 160
trim_trailing_whitespace = true

[{*.yml,*.yaml}]
indent_size = 2

[{*.json,*.xml,*.golden}]
insert_final_newline = false

[*.sh]
indent_size = 2

[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 8
